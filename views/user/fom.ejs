                                <li data-officeId=<%= officeList[i].id %>><a href="javascript:void(0)"><%= officeList[i].office %></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <span id="dataSpan" data-deptid=<%= deptInfo.id %>></span>
                <table id="table"></table>
            </div>
