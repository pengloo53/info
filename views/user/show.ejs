    <div class="container">
        <!-- <div class="content"> -->
        	
<!--             <ol class="breadcrumb">
              <li><a href="/user/fom">FOM管理</a></li>
              <li class="active">显示人员信息</li>
            </ol> -->
        <div style="margin-bottom:20px">
        	<h3>显示人员信息<small> - <%= staffInfo.name %></small></h3>
        	<!-- <a class="btn btn-danger btn-sm pull-right" style="margin-bottom: 20px" href="/user/fom/edit">编辑</a> -->
        </div>
        <div class="row">
	        <div class="col-lg-10">
	        	<table class="table table-bordered">
							<tr class="active">
								<td colspan="7" style="line-height: 2em"><b class="text-primary">基本信息</b></td>
							</tr>
							<tr>
								<td>姓名</td>
								<td><u><%= staffInfo.name %></u></td>
								<td>员工号</td>
								<td><u><%= staffInfo.userid %></u></td>
								<!-- <td rowspan="3"></td> -->
								<td rowspan="6" colspan="2" width="18%" class="text-center"><img src="" alt="photo" class="img-rounded"></td>
							</tr>
							<tr>
								<td>性别</td>
								<td><u><%= staffInfo.gender %></u></td>
								<td>出生日期</td>
								<td><u><%= staffInfo.birthday %></u></td>
							</tr>
							<tr>
								<td>出生地</td>
								<td><u><%= staffInfo.birth_place %></u></td>
								<td>户籍地</td>
								<td><u><%= staffInfo.domicile_place %></u></td>
							</tr>
							<tr>
								<td>毕业学校</td>
								<td><u><%= staffInfo.school %></u></td>
								<td>毕业专业</td>
								<td><u><%= staffInfo.major %></u></td>
							</tr>
							<tr>
								<td>学历</td>
								<td><u><%= staffInfo.education %></u></td>
								<td>毕业日期</td>
								<td><u><%= staffInfo.education_date %></u></td>
							</tr>
							<tr>
								<td>工作日期</td>
								<td><u><%= staffInfo.work_date %></u></td>
								<td>入BOE日期</td>
								<td><u><%= staffInfo.enter_date %></u></td>
							</tr>
							<tr class="active">
								<td colspan="7" style="line-height: 2em"><b class="text-primary">岗位信息</b>
									<a class="btn btn-danger btn-sm pull-right" href="/user/fom/edit?userid=<%= staffInfo.userid %>">编辑</a>
								</td>
							</tr>
							<tr>
								<td>职级</td>
								<td><u><%= staffInfo.grade %></u></td>
								<td>职务</td>
								<td><u><%= staffInfo.duty %></u></td>
							</tr>
							<tr>
								<td>主要岗位</td>
								<td><u><%= staffInfo.mainPost %></u></td>
								<td>次要岗位</td>
								<td><u><%= staffInfo.subPost %></u></td>
							</tr>
							<tr>
								<td>岗位类型</td>
								<td><u><%= staffInfo.postType %></u></td>
								<td>状态</td>
								<td><u><%= staffInfo.state %></u></td>
							</tr>
							<tr>
								<td colspan="7">岗位描述（职责）</td>
								<!-- <td><%= staffInfo.postDescribe %></td> -->
							</tr>
							<tr>
								<td colspan="7">
									<u>
										<% if(staffInfo.postDescribe){ %>
											<%- staffInfo.postDescribe.replace(new RegExp('\n','gm'),'<br/>') + '</p>' %>
										<% } %>
									</u>
								</td>
							</tr>
						</table>
	        </div>
        </div>
        
        <!-- </div>   -->
    </div>    
