<link rel="stylesheet" href="/stylesheets/style.css">
<style>
    .content{
        margin-top: 15px;
    }
    .dept a{
        text-align: center;
    }
    .well-self{
        background-color: #f5f5f5;
        padding: 10px;
        border: 1px solid #e3e3e3;
        border-radius: 5px;
    }
</style>
<body>
    <% include ../layout/nav.ejs %>
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-lg-2">
                    <% include fom-layout-dept.ejs %>
                </div>
                <div class="col-lg-10">
                    <div class="well-self">
                        部长：<i><b><u><span class="text-primary"><%= deptInfo.owner %></span></u></b></i>
                       ，部门编制：<i><b><u><%= deptInfo.preparation %></u></b></i>
                       ，当前人数：<i><b><u><span id='staffNum'></span></u></b></i>
                    </div>
                    <div id="toolbar">
                        <button class="btn btn-primary btn-sm" id="add" data-toggle="modal" data-target="#addModal" data-whatever="addModal">
                                <i class="glyphicon glyphicon-plus"></i> 新入职
                        </button>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                科室 <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <!-- <li><a href="#">Action</a></li> -->
                                <% for(var i=0; i < officeList.length; i++){ %>
                                    <li data-officeId=<%= officeList[i].id %>><a href="javascript:void(0)"><span class="badge pull-right"><%= officeList[i].preparation %></span><%= officeList[i].office %></a></li>
                                <% } %>
                            </ul>
                        </div>
<!--                         <div class="btn-group" role="group" aria-label="...">
                            <% for(var i=0; i < officeList.length; i++){ %>
                                <button type="button" class="btn btn-default btn-sm" data-officeId=<%= officeList[i].id %>><%= officeList[i].office %></button>
                            <% } %>
                        </div> -->
                    </div>
                    <span id="dataSpan" data-deptid=<%= deptInfo.id %>></span>
                    <table id="table"></table>
                </div>
            </div>
        </div>  
    </div>
    <!-- modal -->
    <% include ../modals/fom-add.ejs %>
</body>
